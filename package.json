{
  "name": "micro-services",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run start:shop\" \"npm run start:about\" \"npm run start:container\"",
    "start:container": "cd services/Container && npm start",
    "start:about": "cd services/hosts/about && npm start",
    "start:shop": "cd services/hosts/shop && npm start"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "services/hosts/*"
  ],
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}